{
  "include": ["src/**/*"],
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "es2021",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "isolatedModules": true /* needed for parcel */,
    "strict": true /* Enable all strict type-checking options. */,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
